    <script async crossorigin="anonymous" data-clerk-publishable-key="<%= process.env.CLERK_PUBLISHABLE_KEY %>" src="https://<%= process.env.CLERK_PUBLISHABLE_KEY.split('_')[1] %>.clerk.accounts.dev/npm/@clerk/clerk-js@latest/dist/clerk.browser.js"></script>
    <script>
        // Clerkの初期化とユーザー状態管理（index.ejsと同じ方式）
        window.addEventListener('load', async () => {
            try {
                await window.Clerk.load();
                console.log('Clerk loaded successfully');
                updateUI();
                
                // Clerkの初期化完了後にリスナーを設定
                window.Clerk.addListener(({ user }) => {
                    updateUI();
                });
            } catch (error) {
                console.error('Error loading Clerk:', error);
            }
        });
        
        // UIの更新関数
        function updateUI() {
            const user = window.Clerk.user;
            const loginButton = document.querySelector('button[onclick="window.Clerk.openSignIn()"]');
            const signupButton = document.querySelector('button[onclick="window.Clerk.openSignUp()"]');
            
            if (user) {
                // ログイン済みの場合
                if (loginButton) {
                    loginButton.innerHTML = '<i class="fas fa-user me-1"></i>' + (user.firstName || 'ユーザー');
                    loginButton.onclick = () => window.Clerk.openUserProfile();
                }
                if (signupButton) {
                    signupButton.style.display = 'none';
                }
            } else {
                // 未ログインの場合
                if (loginButton) {
                    loginButton.innerHTML = '<i class="fas fa-right-to-bracket me-1"></i>ログイン';
                    loginButton.onclick = () => window.Clerk.openSignIn();
                }
                if (signupButton) {
                    signupButton.style.display = 'inline-block';
                }
            }
        }
