                    loginBtn.onclick = () => window.Clerk.openUserProfile();
                }
            } else {
                if (userGreeting) userGreeting.style.display = 'none';
                if (logoutBtn) logoutBtn.style.display = 'none';
                if (loginBtn) {
                    loginBtn.innerHTML = '<i class="fas fa-right-to-bracket"></i> „É≠„Ç∞„Ç§„É≥';
