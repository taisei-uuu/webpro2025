                            console.log('Clerk loaded successfully');
                            updateUI();

                            // Clerkの初期化完了後にリスナーを設定
                            window.Clerk.addListener(({ user }) => {
                                updateUI();
                            });
                        } catch (error) {
                            console.error('Error loading Clerk:', error);
                        }
                    });

                    // ユーザープロフィール処理関数
                    function handleUserProfile() {
                        console.log('ユーザープロフィールボタンがクリックされました');

                        // Clerkが利用可能かチェック
                        if (window.Clerk && typeof window.Clerk.openUserProfile === 'function') {
                            try {
                                window.Clerk.openUserProfile();
                                console.log('プロフィール画面を開きました');
                            } catch (error) {
                                console.error('プロフィール画面を開く際にエラーが発生しました:', error);
                                alert('プロフィール画面を開けませんでした。');
                            }
                        } else {
                            console.error('Clerkが利用できません');
                            alert('プロフィール機能が利用できません。');
                        }
                    }

                    // UIの更新関数
                    function updateUI() {
                        const user = window.Clerk.user;
                        const loginButton = document.querySelector('button[onclick="window.Clerk.openSignIn()"]');
                        const signupButton = document.querySelector('button[onclick="window.Clerk.openSignUp()"]');

                        if (user) {
                            // ログイン済みの場合
                            if (loginButton) {
                                loginButton.innerHTML = '<i class="fas fa-user me-1"></i>';
                                loginButton.onclick = handleUserProfile;
                            }
                            if (signupButton) {
                                signupButton.style.display = 'none';
                            }
                        } else {
                            // 未ログインの場合
                            if (loginButton) {
                                loginButton.innerHTML = '<i class="fas fa-right-to-bracket me-1"></i>ログイン';
                                loginButton.onclick = () => window.Clerk.openSignIn();
                            }
