<header class="site-header">
    <div class="container">
        <div class="header-content">
            <!-- 左側のロゴと商号 -->
            <a href="/learning" class="header-logo">
                <img src="/logo.png" alt="Stock with" height="40">
                STOCK&nbsp;<span class="brand-with">WITH</span>
            </a>


            <!-- 右側のアクションボタン -->
            <div class="header-actions">
                <% if (user) { %>
                    <!-- ログイン済みの場合 -->
                    <button id="login-btn" class="btn btn-outline" onclick="handleUserProfile()">
                        <i class="fas fa-user"></i>
                    </button>
                    <% } else { %>
                        <!-- 未ログインの場合 -->
                        <span id="user-greeting" style="display: none;"></span>
                        <button id="logout-btn" class="btn btn-outline" onclick="window.Clerk.signOut()"
                            style="display: none;">
                            <i class="fas fa-sign-out-alt"></i>
                        </button>
                        <button id="login-btn" class="btn btn-outline" onclick="window.Clerk.openSignIn()">
                            <i class="fas fa-right-to-bracket"></i>
                            <span>ログイン</span>
                        </button>
                        <% } %>
            </div>
        </div>
    </div>
</header>

<style>
    .header-nav {
        display: flex;
        gap: 20px;
        margin: 0 20px;
    }

    .nav-link {
        text-decoration: none;
        color: #333;
        font-weight: 600;
        font-size: 1rem;
        padding: 5px 10px;
        border-radius: 5px;
        transition: all 0.2s;
    }

    .nav-link:hover {
        background-color: #f0f0f0;
        color: #1e40af;
    }

    /* レスポンシブ対応 */
    @media (max-width: 768px) {
        .header-nav {
            gap: 10px;
            margin: 0 10px;
        }

        .nav-link {
            font-size: 0.9rem;
            padding: 4px 8px;
        }
    }
</style>